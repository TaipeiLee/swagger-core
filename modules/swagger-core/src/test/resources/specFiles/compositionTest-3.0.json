{
  "openapi": "3.0.0",
  "info": {
    "version": "1.0.0",
    "license": {
      "name": "MIT"
    },
    "title": "Swagger Petstore"
  },
  "servers": [
    {
      "url": "http://petstore.swagger.io/v1"
    }
  ],
  "paths": {},
  "components": {
    "schemas": {
      "Pet": {
        "allOf": [
          {
            "$ref": "Human"
          },
          {
            "$ref": "Animal"
          },
          {
            "$ref": "Bird"
          },
          {
            "properties": {
              "isDomestic": {
                "type": "boolean"
              }
            }
          }
        ]
      },
      "Human": {
        "required": [
          "name"
        ],
        "properties": {
          "name": {
            "type": "string",
            "description": "The name of the human"
          },
          "type": {
            "type": "string"
          },
          "firstName": {
            "type": "string"
          },
          "lastName": {
            "type": "string"
          }
        },
        "discriminator": "type"
      },
      "Animal": {
        "required": [
          "hasLegs"
        ],
        "properties": {
          "hasLegs": {
            "type": "boolean"
          }
        },
        "discriminator": "hasLegs"
      },
      "Bird": {
        "required": [
          "hasWings"
        ],
        "properties": {
          "hasWings": {
            "type": "boolean"
          }
        },
        "discriminator": "hasWings"
      }
    }
  }
}